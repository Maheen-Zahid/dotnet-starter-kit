@using Kinde.Api.Models.Tokens
@{
    Layout = null;
}
@model Kinde.Api.Models.User.KindeSSOUser
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kinde - .NET Starter kit</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, user-scalable=no" />
    <style>
        [hidden] {
            display: none;
        }
    </style>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>

    <header>
        <nav class="nav container">
            <h1 class="text-display-3">KindeAuth</h1>
            @if (ViewBag.Authorized == null|| !(bool)ViewBag.Authorized)
            {
                <div class="js-logged-out-view">
                    @Html.ActionLink("Sign in","Login", "Home",null, new {@class="btn btn-ghost sign-in-btn"})
                    @Html.ActionLink("Sign up","Signup", "Home",null, new {@class="btn btn-dark"})

                </div>
            }
            else
            {

                <div class="profile-blob">
                    <div class="js-user-avatar avatar"></div>
                    <div>
                        @if(Model!=null){
                            <p class="js-user-name text-heading-2">@(Model.GivenName) @(Model.FamilyName) </p>
                        }
                      
                        @Html.ActionLink("Sign out","Logout", "Home",null, new {@class="text-subtle"})
                        @Html.ActionLink("Renew token","Renew", "Home",null, new {@class="text-subtle"})
                    </div>
                </div>

            }



        </nav>
    </header>

    <main>
        <div class="container">

            <div class="js-logged-out-view">
                <div class="card hero">
                    <p class="text-display-1 hero-title">
                        Let's start authenticating <br /> with KindeAuth
                    </p>
                    <p class="text-body-1 hero-tagline">Configure your app</p>

                    <a href="https://kinde.com/docs/sdks/javascript-sdk"
                       target="_blank"
                       rel="noreferrer"
                       class="btn btn-light btn-big">
                        Go to docs
                    </a>

                </div>
            </div>

            <div class="js-logged-in-view" hidden>
                <div class="card start-hero">
                    <p class="text-body-2 start-hero-intro">Woohoo!</p>
                    <p class="text-display-2">
                        Your authentication is all sorted.
                        <br />
                        Build the important stuff.
                    </p>
                </div>
                <section class="next-steps-section">
                    <h2 class="text-heading-1">Next steps for you</h2>
                </section>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <strong class="text-heading-2">KindeAuth</strong>
            <p class="footer-tagline text-body-3">
                Visit our
                <a class="link" href="https://kinde.com/docs">
                    help center
                </a>
            </p>

            <small class="text-subtle">
                © 2022 KindeAuth, Inc. All rights reserved
            </small>
        </div>
    </footer>

</body>
</html>

